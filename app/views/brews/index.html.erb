<h1>Brews</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brews.each do |brew| %>
      <tr>
        <td><%= link_to brew.name, brew %></td>
      </tr>
    <% end %>
  </tbody>
</table>

